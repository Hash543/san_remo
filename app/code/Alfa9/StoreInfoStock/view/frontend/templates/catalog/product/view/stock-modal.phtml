<div id="storeinfostock-modal" style="display:none;">

    <div class="modal-title-wrapper">
        <h1 class="modal-title">
            <span class="base" data-ui-id="modal-title-wrapper"><?= $block->escapeHtml(__('Puedes encontrar este artÃ­culo en las siguientes tiendas:')) ?></span>
        </h1>
