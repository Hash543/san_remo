            <script type="text/javascript">
                window['_arr'] = <?php echo json_encode($items->toArray()); ?>;
                window['arr'] = [];
                for(var key in window['_arr']) {
                    window['arr'].push(window['_arr'][key]);
                }
                window['totalRelated'] = window['arr'].length;
                window['builList'] = function (_array, indexPage) {
                    var count = 0 ;
                    var init = '<div class="products wrapper grid products-grid products-<?= /* @escapeNotVerified */ $type ?>">\n' +
                        '                            <ol class="products list items product-items">';
                    var result = init;

                    for(var item of _array) {
                        count++;
                        var showFavorites = '';
                        if(item['data_ifShowAddToOrShowCart']) {
                            showFavorites += '  <div class="product actions product-item-actions">\n';
                            if(item['data_ifShowAddTo']) {
                                showFavorites += item['data_showAddToDiv'];
                                if(item['data_ifShowAddTo']) {
                                    showFavorites += item['data_addToBlockHtml'];
                                }
                                showFavorites += '            </div>\n';
                            }
                            if(item['data_ifShowCart']) {
                                showFavorites += '  <div class="actions-primary">\n';
                                if(item['data_isSaleable']) {
                                    showFavorites += item['data_button'];
                                } else {
                                    if(item['data_getIsSalable']) {
                                        showFavorites += item['data_inStockDiv'];
                                    } else {
                                        showFavorites += item['data_outOfStockDiv'];
                                    }
                                }
                                showFavorites += '             </div>\n';
                            }
                            showFavorites += '            </div>\n';
                        }


                        result +=item['data_li'] ;
                        result +='    <div class="product-item-info '+item['data_available']+'">' ;
                        result +=showFavorites;
                        result +='        <a href="'+item['data_getProductUrl']+'" class="product photo product-item-photo">' ;
                        result +=item['data_getImageHtml'].replace('data-src','src');
                        result +='        </a>' ;
                        result +='        <div class="product details product-item-details">' ;
                        result +='           <div class="product-title-wrapper">' ;
                        result +='             <h2 class="product-item-manufacturer" style="text-align: center">' ;
                        result +='                 <a class="product-item-link"';
                        result +='                    href="'+item['data_getProductUrl']+'">' ;
                        result +=item['data_manufacturer'];
                        result +='                 </a>' ;
                        result +='             </h2>' ;
                        result +='            <strong class="product name product-item-name">' ;
                        result +='                <a class="product-item-link" title="'+item['data_escapeHtml']+'" href="'+item['data_getProductUrl']+'"' ;
                        result +='>'+item['data_escapeHtml']+'</a>' ;
                        result +='            </strong>' ;
                        result +='         </div>' ;
                        result +=item['data_getProductPrice'];
                        result +=item['data_getReviewsSummaryHtml'];
                        result +=item['data_requiredOptionsHtml'];
                        result += '        </div>\n' +
                            '    </div>\n' +
                            '</li>';
                        if(count == 2){
                            result += '</ol>' + init;
                        }
                    };
                    result += '</ol>' +
                        '</div>';
                    result += '';
                    document.getElementById("cardss").innerHTML = result;
                    window['buildPagination'](indexPage,4,window['totalRelated']);
                };

                window['buildPagination'] = function(indexPage, size, total) {
                    var totalPages = Math.trunc(total / size);
                    if (total % size != 0){totalPages ++}
                    var previous = '';
                    if(indexPage > 1) {
                        previous = '<li class="item pages-item-previous">\n' +
                            '                            <a class="action  previous" href="javascript:void(0);"  onclick="window[\'builList\'](window[\'arr\'].slice('+((size * (indexPage-1)) - size)+','+ (size * (indexPage-1))+'),'+(indexPage-1)+');" title="Previous">\n' +
                            '                                <span class="label">Page</span>\n' +
                            '                                <span>Previous</span>\n' +
                            '                            </a>\n' +
                            '                        </li>';
                    }
                    var next = '';
                    if(indexPage < totalPages) {
                        next = '<li class="item pages-item-next">\n' +
                            '                            <a class="action  next" href="javascript:void(0);"  onclick="window[\'builList\'](window[\'arr\'].slice('+((size * (indexPage+1)) - size)+','+ (size * (indexPage+1))+'),'+(indexPage+1)+');" title="Previous">\n' +
                            '                                <span class="label">Page</span>\n' +
                            '                                <span>Next</span>\n' +
                            '                            </a>\n' +
                            '                        </li>';
                    }
                    var items = '';
                    var position = 0;
                    for(var i = 1; i <= totalPages; i++) {
                        if(+i == +indexPage) {
                            items += '<li class="item">\n' +
                                ' <strong class="page">' +
                                '<span class="label">Youre currently reading page</span>'+
                            '<span>'+i+'</span>'+
                            '</strong>' +
                                '                        </li>';
                        } else {
                            items += '<li class="item">\n' +
                                '                            <a href="javascript:void(0);" onclick="window[\'builList\'](window[\'arr\'].slice(' + position + ',' + (position + size) + '),' + i + ');" class="page">\n' +
                                '                                <span class="label">Page</span>\n' +
                                '                                <span>' + i + '</span>\n' +
                                '                            </a>\n' +
                                '                        </li>';
                        }
                        position += size;
                    }
                    document.getElementById("pagination").innerHTML = '<div class="pages">\n' +
                        '                    <strong class="label pages-label" id="paging-label">Page</strong>\n' +
                        '                    <ul class="items pages-items" aria-labelledby="paging-label">' +
                        previous + items + next +
                        ' </ul>\n' +
                        '                </div>';
                };
                window.onload = function () {
                    window['builList'](window['arr'].slice(0,4), 1);
                };

            </script>
            <?php endif;?>

