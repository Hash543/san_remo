                                        <?php $_item['data_inStockDiv'] = '<div class="stock available"><span>' . __('In stock') . '</span></div>' ?>
                                    <?php else: ?>
                                        <?php $_item['data_outOfStockDiv'] = '<div class="stock unavailable"><span>' . __('Out of stock') . '</span></div>' ?>
