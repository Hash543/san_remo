                                    <?php $_item['data_hasRequiredOptions'] = $_item->getTypeInstance()->hasRequiredOptions($_item) ?>
                                    <?php if ($_item->getTypeInstance()->hasRequiredOptions($_item)): ?>
                                        <?php $_item['data_button'] = '<button class="action tocart primary" 
                                                        data-mage-init=\'{"redirectUrl": {"url": "' . $block->getAddToCartUrl($_item) . '"}}\' 
                                                        type="button" 
                                                        title="' . __('Add to Cart') . '">
